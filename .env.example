APP_NAME=Laravel
APP_ENV=production
APP_KEY=                   # Generate this with "php artisan key:generate" after deployment.
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_LEVEL=debug

# -------------------------------------------------------------------
# Database Configuration (MySQL 8 on Forge)
# -------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=forge
DB_USERNAME=forge
DB_PASSWORD=your_db_password_here

# -------------------------------------------------------------------
# Session, Cache, and Queue Configuration
# -------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# -------------------------------------------------------------------
# Memcached & Redis
# -------------------------------------------------------------------
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -------------------------------------------------------------------
# Mail Configuration
# -------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com         # Update with your SMTP host.
MAIL_PORT=587                      # Adjust the port if needed.
MAIL_USERNAME=your_mail_username   # Set your mail username.
MAIL_PASSWORD=your_mail_password   # Set your mail password.
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -------------------------------------------------------------------
# AWS & Vite (Optional)
# -------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
